<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LeftInLeftOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>

    <style name="BotInBotOutAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="ProfileTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/LeftInLeftOutAnim</item>
    </style>

    <style name="SettingTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/BotInBotOutAnim</item>
    </style>

</resources>
