<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main_search"
    android:background="@color/colorWhiteHalfTran"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/id_main_history_card"
        card_view:cardCornerRadius="@dimen/dime_radius_5"
        card_view:cardElevation="@dimen/dimen_blur_2"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="@dimen/dimen_search_bar_margin"
        android:layout_marginStart="@dimen/dimen_search_bar_margin"
        android:layout_marginEnd="@dimen/dimen_search_bar_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_search_result_recycler"
            android:layout_margin="@dimen/dimen_search_bar_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>

</FrameLayout>