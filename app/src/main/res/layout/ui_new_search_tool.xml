<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_main_search_card"
    card_view:cardElevation="@dimen/dimen_blur_2"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/dime_radius_5"
    android:layout_marginStart="@dimen/dimen_search_bar_margin"
    android:layout_marginEnd="@dimen/dimen_search_bar_margin"
    android:layout_marginTop="@dimen/dimen_margin_32"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_height_50">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/id_main_search_layout"
            android:layout_marginStart="@dimen/dimen_status_bar_top_margin"
            android:layout_marginEnd="@dimen/dimen_status_bar_top_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <EditText
                android:layout_centerInParent="true"
                android:id="@+id/id_main_search_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_edit_height"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textSize="@dimen/dimen_title_txt_size"
                android:background="@android:color/white"/>

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dimen_status_bar_top_margin"
            android:layout_marginEnd="@dimen/dimen_status_bar_top_margin"
            android:gravity="center_vertical"
            android:id="@+id/id_main_search_show"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_edit_height"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_title_txt_size"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
