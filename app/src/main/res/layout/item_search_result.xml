<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_search_result_body"
    android:layout_margin="@dimen/dimen_search_bar_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_search_result_txt"
        android:layout_margin="@dimen/dimen_search_bar_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_result_height"
        android:gravity="center"
        tools:text="Test"
        android:textSize="@dimen/dimen_title_txt_size"
        android:textColor="@color/colorGray"/>

    <View
        android:id="@+id/id_under_line_view"
        android:layout_marginStart="@dimen/dimen_search_bar_margin"
        android:layout_marginEnd="@dimen/dimen_search_bar_margin"
        android:layout_width="match_parent"
        android:layout_below="@id/id_search_result_txt"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>

</RelativeLayout>