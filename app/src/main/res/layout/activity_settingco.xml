<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/id_common_title"
        layout="@layout/ui_common_title"/>

    <Button
        android:id="@+id/id_setting_to_co"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_set_co"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_common_title"
        android:background="@color/colorWhiteHalfTran" />

    <RadioGroup
        android:id="@+id/radioGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_setting_to_co">

        <RadioButton
            android:id="@+id/id_co1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/id_setting_to_co"
            android:text="@string/app_set_co1"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/id_co2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/app_set_co2"
            android:textSize="20dp" />
    </RadioGroup>


    />

</RelativeLayout>