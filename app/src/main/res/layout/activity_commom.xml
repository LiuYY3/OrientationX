<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/id_favorite_top"
        layout="@layout/ui_common_title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20sp"
        android:text="@string/app_co1"/>
    <android.support.v7.widget.CardView
        android:id="@+id/id_first_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_first_txt"
            android:layout_margin="@dimen/dimen_margin_8"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="20sp"/>

    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        android:text="@string/app_co2"/>
    <android.support.v7.widget.CardView
        android:id="@+id/id_second_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_second_txt"
            android:layout_margin="@dimen/dimen_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textSize="20sp"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_common_search_result_recycle"
        android:layout_margin="@dimen/dimen_margin_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>