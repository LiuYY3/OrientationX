<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/ui_common_title"/>

    <Button
        android:id="@+id/id_back_to_map_btn"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_input_txt_size"
        android:text="@string/app_to_map"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_drag_left_background"
        android:layout_width="@dimen/dimen_btn_half_width"
        android:layout_height="@dimen/dimen_btn_width" />

    <View
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHoloBlue"
        android:layout_width="2dp"
        android:layout_height="@dimen/dimen_height_40"/>

    <Button
        android:id="@+id/id_to_setting_btn"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_input_txt_size"
        android:text="@string/app_to_set"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_margin_40"
        android:background="@drawable/btn_drag_round_background"
        android:layout_width="@dimen/dimen_btn_width"
        android:layout_height="@dimen/dimen_btn_width" />

</RelativeLayout>