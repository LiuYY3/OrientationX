<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/id_start_point_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_start_edit_txt"
            android:layout_margin="@dimen/dimen_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_input_txt_size"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/id_first_point_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_first_edit_txt"
            android:layout_margin="@dimen/dimen_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_input_txt_size"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/id_second_point_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_second_edit_txt"
            android:layout_margin="@dimen/dimen_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_input_txt_size"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/id_third_point_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_third_edit_txt"
            android:layout_margin="@dimen/dimen_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_input_txt_size"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/id_forth_point_card"
        card_view:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/dimen_margin_8"
        card_view:cardElevation="@dimen/dimen_blur_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/id_forth_edit_txt"
            android:layout_margin="@dimen/dimen_margin_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_input_txt_size"/>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/id_begin_all_journey_btn"
        android:layout_margin="@dimen/dimen_margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_all_search_result_recycle"
        android:layout_margin="@dimen/dimen_margin_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>