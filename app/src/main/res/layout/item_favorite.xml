<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_favorite_body_card"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="@dimen/dimen_blur_2"
    android:layout_margin="@dimen/dimen_search_bar_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/id_favorite_body"
        android:layout_margin="@dimen/dimen_search_bar_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/id_pick_btn"
            android:layout_marginEnd="@dimen/dimen_margin_8"
            android:layout_width="@dimen/dimen_btn_half_width"
            android:layout_height="@dimen/dimen_btn_half_width" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/id_favorite_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_btn_half_width"
            android:layout_toEndOf="@+id/id_pick_btn"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_title_txt_size"
            tools:text="Test" />

    </RelativeLayout>

</android.support.v7.widget.CardView>