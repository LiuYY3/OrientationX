<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_search_base"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent">

    <RelativeLayout
        android:id="@+id/id_search_layout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_edit_height"
        android:background="@android:color/white">



        <EditText
            android:id="@+id/id_search_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"

            android:background="@android:color/white"
            android:hint="@string/app_input_hint"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textSize="@dimen/dimen_title_txt_size" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_search_history_list"
        android:layout_marginTop="@dimen/dimen_small_margin"
        android:layout_marginStart="@dimen/dimen_search_bar_margin"
        android:layout_marginEnd="@dimen/dimen_search_bar_margin"
        android:layout_marginBottom="@dimen/dimen_search_bar_margin"
        android:background="@android:color/white"
        android:fadeScrollbars="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>