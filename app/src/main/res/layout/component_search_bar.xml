<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorTransparent">

    <RelativeLayout
        android:layout_margin="@dimen/dimen_search_bar_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/id_search_img"
            android:contentDescription="@string/app_content_description"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dimen_small_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_search"/>

        <EditText
            android:id="@+id/id_search_txt"
            android:layout_marginStart="@dimen/dimen_search_bar_margin"
            android:layout_toStartOf="@id/id_search_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:hint="@string/app_input_hint"
            android:inputType="text"
            android:textSize="@dimen/dimen_title_txt_size"
            android:background="@android:color/white"/>

    </RelativeLayout>

</FrameLayout>